Fuente1 = 'Lato', sans-serif
Fuente2 = 'Oswald', sans-serif
primary-color = #333333
secundary-color = #8841DA
light-color = #ffffff

contenedor()
	display: flex
	width: 96%
	margin: 0 auto
	padding: 30px 0

caja-sombra()
	background: light-color
	box-shadow: 0px 20px 33px 0px rgba(0,0,0,0.20)

for header in 3 2 1
	h{header}
		font-size: 35px - (5*header)
		margin: 0

titulos(fuente)
	if fuente == Fuente1
		font-family: Fuente1
	else 
		font-family: Fuente2
		font-weight: 600
		text-transform: uppercase

* 
	box-sizing: border-box

body
	margin: 0
	titulos(Fuente1)
	color: primary-color
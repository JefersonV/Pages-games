Fuente1 = 'Lato', sans-serif
Fuente2 = 'Oswald', sans-serif
primary-color = #333333
secundary-color = #8841DA
light-color = #ffffff

contenedor()
	display: flex
	width: 96%
	margin: 0 auto
	padding: 30px 0

caja-sombra()
	background: light-color
	box-shadow: 0px 20px 33px 0px rgba(0,0,0,0.20)

* 
	box-sizing: border-box

body
	margin: 0
	font-family: Fuente1
	color: primary-color

.buscador
	width: 100%
	height: 250px;
	padding: 100px;
	background-image: url("../images/cover.jpg")
	background-size: cover
	text-align: center
	&__input
		width: 75%
		height: 60px
		padding: 20px
		border: none 
		border-radius: 30px
		font-size: 25px
		outline: none

.encabezado--con-filtros
	contenedor()
	h2 
		margin-top: 10px
		text-transform: uppercase
		font-weight: 500
		font-size: 30px
		font-family: Fuente2
	.filtros
		width: 250px
		height: 75px
		padding: 20px
		margin-left: auto
		caja-sombra()
		span 
			text-transform: uppercase
			font-family: Fuente2
		a
			margin-left: 20px
			font-size: 25px
			color: primary-color

.contenido
	margin-bottom: 40px
	justify-content: space-evenly
	contenedor()
	
.caja
	max-width: 400px
	caja-sombra()
	&__contenido
		padding: 20px;
		background-color: light-color
		span 
			text-transform: uppercase
			color: secundary-color
			font-family: Fuente2
		height
			text-transform: uppercase
			font-weight: normal
			font-family: Fuente2